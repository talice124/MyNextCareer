<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pale_blue_bg"
    tools:context="com.brigid.android.mynextcareer.HollandTest">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Question1"
        android:id="@+id/Question"
        android:layout_below="@+id/questionHeaderText"
        android:background="#CCFFFFFF"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/AnswerGroup"
        android:layoutDirection="ltr"
        android:background="#CCFFFFFF"
        android:layout_below="@+id/Question"
        android:layout_alignLeft="@+id/Question"
        android:layout_alignStart="@id/questionHeaderText"
        android:layout_alignRight="@+id/Question"
        android:layout_alignEnd="@+id/Question">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Answer1"
            android:id="@+id/RB1"
            android:layoutDirection="ltr" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Answer2"
            android:id="@+id/RB2"
            android:layoutDirection="ltr" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Answer3"
            android:id="@+id/RB3"
            android:layoutDirection="ltr" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Answer4"
            android:id="@+id/RB4"
            android:layoutDirection="ltr" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Answer5"
            android:id="@+id/RB5"
            android:layoutDirection="ltr" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NextButtonText"
            android:id="@+id/nextButton"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickNext"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FinishButtonText"
            android:id="@+id/finishbutton"
            android:layout_gravity="center_horizontal"
            android:onClick="onClickFinish"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#CCFFFFFF"
        android:text="@string/header"
        android:id="@+id/questionHeaderText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
